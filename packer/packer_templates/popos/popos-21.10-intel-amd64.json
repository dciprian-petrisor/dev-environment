{
    "builders": [
        {
            "boot_command": [
                "<leftCtrlOn><leftAltOn><f3><leftCtrlOff><leftAltOff><wait>",
                "<wait5>",
                "pop-os<enter><wait>",
                "<wait5>",
                "sudo distinst",
                " -s /cdrom/casper/filesystem.squashfs",
                " -r /cdrom/casper/filesystem.manifest-remove",
                " -h pop-os",
                " -k us",
                " -l en_US.UTF-8",
                " -b /dev/sda",
                " -t /dev/sda:gpt",
                " -n /dev/sda:primary:start:512M:fat32:mount=/boot/efi:flags=esp",
                " -n /dev/sda:primary:512M:end:ext4:mount=/",
                " --realname vagrant",
                " --username vagrant",
                " --password vagrant",
                " --profile_icon /usr/share/pixmaps/faces/penguin.png",
                "<enter><wait5m>",
                "reboot<enter>",
                "<wait1m>",
                "<leftCtrlOn><leftAltOn><f3><leftCtrlOff><leftAltOff><wait>",
                "<wait5>",
                "vagrant<enter><wait>",
                "<wait5>",
                "vagrant<enter><wait1m>",
                "sudo -E apt update -y<enter><wait>",
                "vagrant<enter><wait30s>",
                "sudo -E apt-get -y install linux-tools-$(uname -r) linux-cloud-tools-$(uname -r) linux-cloud-tools-common openssh-server<enter><wait>",
                "vagrant<enter>",
                "<wait5m>",
                "reboot<enter>",
                "<wait1m>"
            ],
            "boot_wait": "1m",
            "communicator": "ssh",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{user `disk_size`}}",
            "enable_secure_boot": false,
            "generation": "{{user `hyperv_generation`}}",
            "http_directory": "{{user `http_directory`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
            "memory": "{{user `memory`}}",
            "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-hyperv",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_timeout": "10000s",
            "ssh_username": "vagrant",
            "switch_name": "{{user `hyperv_switch`}}",
            "type": "hyperv-iso",
            "vm_name": "{{ user `template` }}",
            "boot_order": ["SCSI:0:0", "DVD", "NET"],
            "first_boot_device": "DVD",
	        "configuration_version": "9.2"
        }
    ],
    "post-processors": [
        {
            "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
            "type": "vagrant"
        }
    ],
    "provisioners": [
        {
            "environment_vars": [
                "HOME_DIR=/home/vagrant",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
            "expect_disconnect": true,
            "scripts": [
                "{{template_dir}}/scripts/update.sh",
                "{{template_dir}}/../_common/motd.sh",
                "{{template_dir}}/../_common/sshd.sh",
                "{{template_dir}}/scripts/networking.sh",
                "{{template_dir}}/scripts/sudoers.sh",
                "{{template_dir}}/scripts/vagrant.sh",
                "{{template_dir}}/scripts/hyperv_enhanced_session.sh",
                "{{template_dir}}/scripts/hyperv_sound.sh",
                "{{template_dir}}/scripts/cleanup.sh",
                "{{template_dir}}/../_common/minimize.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "box_basename": "popos-21.10",
        "build_directory": "../../builds",
        "build_timestamp": "{{isotime \"20060102150405\"}}",
        "cpus": "2",
        "disk_size": "65536",
        "git_revision": "__unknown_git_revision__",
        "guest_additions_url": "",
        "headless": "",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "hyperv_generation": "2",
        "hyperv_switch": "bento",
        "iso_checksum": "93e8d3977d9414d7f32455af4fa38ea7a71170dc9119d2d1f8e1fba24826fae2",
        "iso_name": "pop-os_21.10_amd64_intel_7.iso",
        "memory": "2048",
        "mirror": "https://pop-iso.sfo2.cdn.digitaloceanspaces.com",
        "mirror_directory": "21.10/amd64/intel/7",
        "name": "popos-21.10",
        "no_proxy": "{{env `no_proxy`}}",
        "qemu_display": "none",
        "template": "popos-21.10-amd64",
        "version": "TIMESTAMP"
    }
}
